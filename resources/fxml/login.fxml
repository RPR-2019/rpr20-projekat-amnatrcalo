<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="316.0" prefWidth="397.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
          <stylesheets>
              <URL value="@/css/login.css" />
          </stylesheets>
         <children>
            <StackPane prefHeight="50.0" prefWidth="100.0" styleClass="logo">
               <children>
                  <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/plan-your-day-icon.png" />
                     </image>
                     <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </StackPane.margin>
                  </ImageView>
               </children>
            </StackPane>
            <GridPane hgap="10.0" layoutX="75.0" layoutY="75.0" prefHeight="241.0" prefWidth="258.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="fldUsername" alignment="CENTER" prefHeight="25.0" prefWidth="150.0" promptText="%username" GridPane.rowIndex="2" />
                   <PasswordField fx:id="fldPassword" alignment="CENTER" promptText="%password" GridPane.rowIndex="3" />
                   <Label fx:id="lblWhatToEnter" styleClass="subheading" textFill="#f40b59" GridPane.rowIndex="1" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#btnLoginAction" prefHeight="25.0" prefWidth="246.0" styleClass="btn" text="%log_in" textFill="WHITE" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font></Button>
                  <Label fx:id="lblHeading" styleClass="heading" text="%login" textFill="#f40b59">
                     <font>
                        <Font name="Roboto Light" size="40.0" />
                     </font>
                  </Label>
                  <GridPane GridPane.rowIndex="5">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label fx:id="lblDontHaveAccount" alignment="CENTER" textFill="#f40b59" />
                        <Hyperlink onAction="#hyperlinkAction" text="%sign_up" GridPane.columnIndex="1" />
                     </children>
                  </GridPane>

               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </GridPane>
         </children>
      </AnchorPane>
