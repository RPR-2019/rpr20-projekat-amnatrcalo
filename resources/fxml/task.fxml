<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="gridPane" hgap="10.0" prefHeight="400.0" prefWidth="600.0" styleClass="gridPane" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/task.css" />
   </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>

   <children>
      <TextField fx:id="fldTaskName" promptText="%task_name">
         <font>
            <Font name="Lucida Handwriting Italic" size="18.0" />
         </font></TextField>
      <TextArea fx:id="areaNote" prefHeight="200.0" prefWidth="200.0" promptText="%add_note" GridPane.rowIndex="3" />
      <ButtonBar GridPane.rowIndex="4">
         <buttons>
            <Button fx:id="btnCreate" defaultButton="true" mnemonicParsing="false" onAction="#actionCreate" styleClass="btnCreate" text="Create " textFill="WHITE">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></Button>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" styleClass="btnCancel" text="Cancel">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></Button>
         </buttons>
      </ButtonBar>
      <ChoiceBox fx:id="listMenu" prefHeight="34.0" prefWidth="129.0" GridPane.columnIndex="2" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
