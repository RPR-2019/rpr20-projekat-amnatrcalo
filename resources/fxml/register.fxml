<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="500.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/login.css" />
    </stylesheets>

    <children>
        <StackPane prefHeight="50.0" prefWidth="100.0" styleClass="logo">
            <children>
                <ImageView fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/plan-your-day-icon.png" />
                    </image>
                    <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </StackPane.margin>
                </ImageView>
            </children>
        </StackPane>
        <GridPane hgap="10.0" layoutX="131.0" layoutY="105.0" prefWidth="239.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
            <VBox GridPane.rowIndex="4">
               <children>
                      <TextField fx:id="fldUsername" alignment="CENTER" focusTraversable="false" prefHeight="25.0" prefWidth="150.0" promptText="Username" />
                  <Label fx:id="errorUsername" textFill="WHITE" />
               </children>
            </VBox>
                <Label text="Please fill in this form to create an account!" textFill="#f40b59" GridPane.rowIndex="1" />
                <Button defaultButton="true" mnemonicParsing="false" onAction="#btnSignupAction" prefHeight="25.0" prefWidth="227.0" styleClass="btn" text="Sign up" textFill="WHITE" GridPane.rowIndex="7">
                    <font>
                        <Font name="System Italic" size="12.0" />
                    </font></Button>
                <Label text="SIGN UP" textFill="#f40b59">
                    <font>
                        <Font name="Roboto Light" size="50.0" />
                    </font>
                </Label>
                <GridPane GridPane.rowIndex="8">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="138.0" minWidth="10.0" prefWidth="124.00000000000001" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="48.66666666666666" minWidth="10.0" prefWidth="48.66666666666666" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Already have an account?" textFill="#f40b59" />
                        <Hyperlink onAction="#hyperlinkAction" text="Log in" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            <VBox GridPane.rowIndex="2">
               <children>
                  <TextField fx:id="fldFirstName" alignment="CENTER" promptText="First Name" />
                  <Label fx:id="errorFirstName" textFill="WHITE" />
               </children>
            </VBox>
            <VBox GridPane.rowIndex="3">
               <children>
                  <TextField fx:id="fldLastName" alignment="CENTER" promptText="Last Name" />
                  <Label fx:id="errorLastName" textFill="WHITE" />
               </children>
            </VBox>
            <VBox GridPane.rowIndex="5">
               <children>
                  <PasswordField fx:id="fldPassword" alignment="CENTER" promptText="Password" />
                  <Label fx:id="errorPassword" textFill="WHITE" />
               </children>
            </VBox>
            <VBox GridPane.rowIndex="6">
               <children>
                  <PasswordField fx:id="fldConfirmPassword" alignment="CENTER" promptText="Confirm Password" />
                  <Label fx:id="errorConfirmPassword" textFill="WHITE" />
               </children>
            </VBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </GridPane>
    </children>
</AnchorPane>
